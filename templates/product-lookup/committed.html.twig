{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#committedItems').DataTable({
                responsive: true,
                order: [[3, 'desc']],
                ajax: '{{path('product_lookup_committed_data')}}',
                columns: [
                    { data: 'itemNumber' },
                    { data: 'name' },
                    { data: 'binLocation' },
                    { data: 'quantityCommitted' }
                ]
            });
        });
    </script>
{% endblock %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Committed Products</h1>
    </div>

    <br>

    <table id="committedItems" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>SKU</th>
                <th>Name</th>
                <th>Bin</th>
                <th>Committed</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>SKU</th>
                <th>Name</th>
                <th>Bin</th>
                <th>Committed</th>
            </tr>
        </tfoot>
    </table>

    <p><a href="{{ path('product_lookup_index') }}">Back</a></p>

{% endblock %}
